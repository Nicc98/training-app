#: import OptionsNavigationDrawer libs.baseclass.navigation_drawer.OptionsNavigationDrawer
#: import OptionsItem libs.baseclass.navigation_drawer.OptionsItem

<OptionsItem>:
    text: self.text
    theme_text_color: "Custom"
    on_press: self.text_color = app.theme_manager.accent_color
    on_release: self.text_color = app.theme_manager.primary_color
    on_release: app.root.set_current_screen(self.text)
    on_release: app.root.nav_drawer.set_state("closed")

    IconLeftWidget:
        icon: root.icon
        text_color: app.theme_manager.primary_color

<OptionsNavigationDrawer>:
    options_navigation_drawer: options_navigation_drawer

    MDBoxLayout:
        id: options_navigation_drawer
        orientation: "vertical"
        padding: "8dp"
        spacing: "8dp"

        MDLabel:
            text: "Training App"
            font_style: "Button"
            adaptive_height: True

        ScrollView:

            MDList:

                OptionsItem:
                    id: home_option
                    icon: "home"
                    text: "Home"

                OptionsItem:
                    id: number_generator_option
                    icon: "slot-machine-outline"
                    text: "Number Generator"

