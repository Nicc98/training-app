#: import SlotMachineScreen libs.baseclass.screens.slot_machine_screen.SlotMachineScreen

<SlotMachineScreen>:
    name: "Slot Machine"

    MDBoxLayout:
        orientation: 'vertical'
        padding: "10dp"
        spacing: "10dp"
        position_hint: {'center_x':0.5, 'center_y':0.5}

        canvas.before:
            Color:
                rgba: (0, 1, 0, 0.5)

            Rectangle:
                pos: self.pos
                size: root.size
                source: 'assets/images/jungle_bg.jpg'

        Image:
            id: spin_gif
            source: 'assets/images/gorilla-gamgam.gif'
            size: 300, 300
            anim_delay: -1
            anim_loop: 1
            allow_stretch: True
        
        MDBoxLayout:
            padding: "10dp"
            spacing: "5dp"

            # TODO: Need to make class for spin label
            MDLabel:
                id: first_simbol_label
                text: "-"
                color: "##ffffff"
                font_size: 128
                bold: True
                halign: 'center'
            
            MDLabel:
                id: second_simbol_label
                text: "-"
                color: "##ffffff"
                font_size: 128
                bold: True
                halign: 'center'
            
            MDLabel:
                id: third_simbol_label
                text: "-"
                color: "##ffffff"
                font_size: 128
                bold: True
                halign: 'center'

        AnchorLayout:

            MDRoundFlatButton:
                id: spin_btn
                text: "SPIN"
                font_size: 128
                text_color: "##ffffff"
                on_press: root.spin()
                on_press: spin_gif.anim_delay = 0.05
                on_press: spin_gif._coreimage.anim_reset(True)
