#: import AppLayout libs.baseclass.app_layout.AppLayout

#  Kivy file references
#: include libs/kvs/home_screen.kv
#: include libs/kvs/slot_machine_screen.kv
#: include libs/kvs/navigation_drawer.kv
        
<AppLayout>:

    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            id: toolbar
            title: home_screen.name
            adaptive_height: True
            elevation: 5
            left_action_items: [['menu', lambda x: nav_drawer.set_state("open")]]

        MDNavigationLayout:

            ScreenManager:
                id: screen_manager

                HomeScreen:
                    id: home_screen
                SlotMachineScreen:
                    id: slot_machine_screen

            MDNavigationDrawer:
                id: nav_drawer

                OptionsNavigationDrawer:

AppLayout:
